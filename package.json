{
  "name": "@spiderweb/core",
  "version": "0.1.0",
  "description": "A web framework focused on modularization",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "node --env-file=.env --watch -r ts-node/register src/index.ts",
    "start": "node --env-file=.env dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "framework",
    "web",
    "modules",
    "api",
    "graphql",
    "fastify"
  ],
  "author": "Isac Petinate <idpetinate@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/merge": "^9.0.9",
    "fastify": "^5.1.0",
    "graphql": "^16.9.0",
    "mercurius": "^15.1.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.9.1",
    "@vitest/coverage-v8": "^2.1.5",
    "rollup": "^4.27.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5"
  }
}
